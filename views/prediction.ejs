  <h1><b>Loan Eligiblity Evaluation</b></h1>

  <form id="form" action="/predict" method="POST">

    <!-- Details -->

    <!--Full Name-->
    <h4>Enter data in Dollars($)</h4>
    <div class="form-control">
        <label for="name" id="label-name">
            Name
        </label>

        <!-- Input Type Text -->
        <input type="text"
            id="name"
            placeholder="Enter your name" name="name" />
    </div>
    <!--Gender-->
    <div class="form-control">
        <label for="gender" id="label-gender">Gender</label>
        
        <!-- Dropdown options -->
        <select name="gender" id="gender">
            <option value="male">Male</option>
            <option value="female">Female</option>
        </select>
    </div>

    <!--Marital Status-->

    <div class="form-control">
        <label for="marital" id="label-marital">Marital Status</label>
        
        <!-- Dropdown options -->
        <select name="marital" id="marital">
            <option value="yes">Yes</option>
            <option value="no">No</option>
        </select>
    </div>

    <!--Dependents-->

    <div class="form-control">
        <label for="dependents" id="label-dependents">Dependents</label>
        
        <!-- Dropdown options -->
        <select name="dependents" id="dependents">
            <option value="no">No</option>
            <option value="one">One</option>
            <option value="two">Two</option>
            <option value="more_two">More than Two</option>
        </select>
    </div>

    <!--Education-->

    <div class="form-control">
        <label for="education" id="label-education">Education</label>
        
        <!-- Dropdown options -->
        <select name="education" id="education">
            <option value="Not_G">Not Graduated</option>
            <option value="G">Graduated</option>
        </select>
    </div>

    <!--Employment Status-->

    <div class="form-control">
        <label for="emp" id="label-emp">Employment Status</label>
        
        <!-- Dropdown options -->
        <select name="emp" id="emp">
            <option value="job">Job</option>
            <option value="self">Self Employed</option>
        </select>
    </div>

    <!--Applicants Income-->

    <div class="form-control">
      <label for="app_income" id="label-app_income">
          Applicant's Income
      </label>

      <!-- Input Type Text -->
      <input name="appinc" type="text"
          id="app_income"
          placeholder="Enter Applicant's Income" />
  </div>

  <!--Co-Applicants Income-->

  <div class="form-control">
      <label for="Capp_income" id="label-Capp_income">
          Co-Applicant's Income
      </label>

      <!-- Input Type Text -->
      <input type="text" name="coappinc"
          id="Capp_income"
          placeholder="Enter Co-Applicant's Income" />
  </div>

  <!--Loan Amount-->

  <div class="form-control">
    <label for="loan_amt" id="label-loan_amt">
        Loan Amount
    </label>

    <!-- Input Type Text -->
    <input type="loan_amt" name="loanamt"
        id="loan_amt"
        placeholder="Enter Loan Amount" />
    </div>

    <!--Loan Duration-->

    <div class="form-control">
        <label for="loan_d" id="label-loan_d">Loan Duration</label>
        
        <!-- Dropdown options -->
        <select name="loan_d" id="loan_d">
            <option value="60">60 Months</option>
            <option value="180">180 Month</option>
            <option value="240">240 Month</option>
            <option value="360">360 Year</option>
            <option value="480">480 Month</option>
        </select>
    </div>

    <!--Credit Score-->

    <div class="form-control">
        <label for="credit" id="label-credit">Credit Score</label>
        
        <!-- Dropdown options -->
        <select name="credit" id="credit">
            <option value="b_500">Below 500</option>
            <option value="a_500">Above 500</option>
        </select>
      </div>

    <!--Property Area-->

    <div class="form-control">
      <label for="prop" id="label-prop">Property Area</label>
      
      <!-- Dropdown options -->
      <select name="prop" id="prop">
          <option value="rural">Rural</option>
          <option value="urban">Urban</option>
          <option value="semi-urban">Semi Urban</option>
      </select>
    </div>

    <!-- Multi-line Text Input Control -->
    <button class="button_forms" type="submit" value="submit">
        Check for Eligiblity
    </button>
</form>


